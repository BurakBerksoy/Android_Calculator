<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/getTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/getTextNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/getTextNumber2"
        app:layout_constraintTop_toBottomOf="@+id/getTextNumber2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonAdded"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:onClick="ProcessAdded"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/buttonOuted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getTextNumber2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonPercentage"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="225dp"
        android:onClick="ProcessPercentage"
        android:text="Percentage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSquareRoot"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonPower"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:onClick="ProcessPower"
        android:text="Power"
        app:layout_constraintBottom_toTopOf="@+id/buttonSquareRoot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivision"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button5"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:onClick="ProcessMultiply"
        android:text="Multiply"
        app:layout_constraintBottom_toTopOf="@+id/buttonDivision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOuted"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:onClick="ProcessDivision"
        android:text="Division"
        app:layout_constraintBottom_toTopOf="@+id/buttonPower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonSquareRoot"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:onClick="ProcessSquareRoot"
        android:text="Square"
        app:layout_constraintBottom_toTopOf="@+id/buttonPercentage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPower"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonOuted"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:onClick="ProcessOuted"
        android:text="Out"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdded"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/resultTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="122dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPercentage"
        app:layout_constraintVertical_bias="0.534"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>